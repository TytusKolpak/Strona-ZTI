<%- include("header") -%>
    <main>
        <% if(usageMode !=='revievView' ){ %>
            <div class="mainDivX">
                <%- include("adder") -%>
            </div>
            <% if(usageMode === 'adder') {%> 
                <div class="mainDivX">
                    <div class="mainDiv">
                        <table>
                            <tr>
                                <td>
                                    <form action="/resetAdder" method="post">
                                        <button type="submit">Delete my collection</button>
                                    </form>
                                </td>
                                <td>
                                    <form action="/showOrDeleteInstances" method="post">
                                        <button type="submit">Show my current collection</button>
                                    </form>
                                </td>
                            </tr>
                        </table>
                    </div>
                </div>
            <hr>
            <% } %> 
            <% }else{%>
                <div class="center">
                    <h2 class="display-5">
                        <%= waterNameInReview %>
                    </h2>

                    <p class="lead">
                        <%= waterTypeInReview %>
                    </p>
                    <img src="<%=waterImgInReview%> " alt="picture">
                </div>
                <br>
                <hr>
                <% } %>

                    <%for (let index=0; index < iterationNumber; index++) {%>
                        <div class="mainDiv">
                            <div>
                                <% if(usageMode==='revievView' ){ %>

                                    <p class="lead">
                                        Submited by: <%= allWaterInstancesM[index].grader %>
                                    </p>
                                    <% } %>
                                        <h2 class="display-5">
                                            <%= allWaterInstancesM[index].name %>
                                        </h2>
                                        <p class="lead">
                                            <%= allWaterInstancesM[index].type %>
                                        </p>
                            </div>
                            <table style="
                        margin-left: auto; 
                        margin-right: auto;">
                                <% if(usageMode !=='revievView' ){ %>
                                    <td>
                                        <img src="<%= allWaterInstancesM[index].imgUrl %>">
                                    </td>
                                    <% } %>
                                        <td>
                                            <table>
                                                <tr>
                                                    <td>Initial taste</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.IT; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.IT;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Taste after 8h</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.TA8H; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.TA8H;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Bottle quality</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.BQ; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.BQ;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Bottle design</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.BD; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.BD;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Mineral content</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.MC; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.MC;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Price</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.P; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.P;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                                <tr>
                                                    <td>Availability</td>
                                                    <td>
                                                        <%for (let index1=0; index1 <
                                                            allWaterInstancesM[index].rating.A; index1++) {%>
                                                            ⚫
                                                            <%}%>
                                                                <%for (let index2=allWaterInstancesM[index].rating.A;
                                                                    index2 < 5; index2++) {%>
                                                                    ⚪
                                                                    <%}%>
                                                    </td>
                                                </tr>
                                            </table>
                                        </td>
                            </table>

                            <% if(usageMode !=='revievView' ){ %>

                                <table class="mainDiv">
                                    <tr>
                                        <td>
                                            <form action="showOrDeleteInstances" method="post">
                                                <button type="submit" name="instance_id"
                                                    value="<%=allWaterInstancesM[index]._id%>">Delete</button>
                                            </form>
                                        </td>
                                        <td>
                                            <form action="putInstanceOnMainPage" method="post">
                                                <button type="submit" name="instance_id"
                                                    value="<%=allWaterInstancesM[index]._id%>">Post it</button>
                                            </form>
                                        </td>
                                    </tr>
                                </table>
                                <% }else{ %>
                                    <div>
                                        Their opinion:
                                        <br>
                                        <%=allWaterInstancesM[index].opinion%>
                                    </div>
                                    <%}%>
                        </div>
                        <%}%>
    </main>

    <%- include("message") -%>